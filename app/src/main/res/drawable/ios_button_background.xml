<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D1D1D6" /> <!-- Color al presionar -->
            <corners android:radius="25dp" />  <!-- Esquinas redondeadas -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />  <!-- Color normal -->
            <corners android:radius="25dp" />
            <stroke android:color="#007AFF" android:width="2dp" /> <!-- Borde azul -->
        </shape>
    </item>
</selector>
